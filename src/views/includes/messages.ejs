<% if (errors.length > 0) { %>

    <section class="show-errors">
        <div class="container-errors text-center my-1">
            <% errors.forEach(err => { %>
                <%= err %><br>
            <% }); %>
        </div>
    </section>

<% } %>

<% if (success.length > 0) { %>

    <section class="show-success">
        <div class="container-success text-center my-2">
            <% success.forEach(suc => { %>
                <%= suc %><br>
            <% }); %>
        </div>
    </section>

<% } %>
